<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:text="22:31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListDepart"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingRight="@dimen/spacingMedium"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivListArrow"
                android:paddingLeft="@dimen/spacingLarge"
                android:paddingRight="@dimen/spacingSmall"
                android:src="@drawable/ic_keyboard_backspace_black_48px"
                android:rotation="180"
                android:scaleType="centerCrop"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tvListDepart"
                android:layout_alignBottom="@+id/tvListDepart" />

            <TextView
                android:text="22:31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListArrive"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingRight="15sp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivListArrow" />

            <TextView
                android:text="Plat.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListDepartPlatform"
                android:layout_below="@+id/tvListDepartStation"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="FNN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListArriveStation"
                android:layout_below="@+id/ivListArrow"
                android:layout_toEndOf="@+id/ivListArrow" />

            <TextView
                android:text="Plat.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListArrivePlatform"
                android:layout_above="@+id/tvListRoute"
                android:layout_alignStart="@+id/tvListArriveStation" />

            <TextView
                android:paddingTop="@dimen/spacingSmall"
                android:text="Bracknell to Reading Station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListRoute"
                android:layout_below="@+id/tvListDepartPlatform"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="BCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListDepartStation"
                android:layout_below="@+id/tvListDepart"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="1 change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListChanges"
                android:layout_alignBaseline="@+id/tvListRoute"
                android:layout_alignBottom="@+id/tvListRoute"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear_black_48px"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/ivDelete" />

            <TextView
                android:text="1hr 15m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListDuration"
                android:layout_above="@+id/tvListChanges"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>