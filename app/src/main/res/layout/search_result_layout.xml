<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbLoadingResults"
        android:indeterminate="true"
        android:layout_marginTop="@dimen/spacingHuge" />

    <TextView
        android:text="Unable to find trains."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoadingText"
        android:textSize="@dimen/textTitle"
        android:paddingTop="@dimen/spacingHuge"
        android:paddingLeft="@dimen/spacingLarge"
        android:paddingRight="@dimen/spacingLarge"
        android:textAlignment="center" />

    <TextView
        android:text="This may be because the servers are offline or you have no internet connection."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSubLoadingText"
        android:paddingLeft="@dimen/spacingHuge"
        android:paddingRight="@dimen/spacingHuge"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="@dimen/spacingSmall" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>