<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/llRow"
    android:paddingBottom="5sp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingTop="20sp"
    android:hardwareAccelerated="false">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="@dimen/spacingMedium"
            android:text="Bracknell to Reading Station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRowRoute"
            android:layout_below="@+id/ivRowArrow"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tvRowPlatform" />

        <TextView
            android:text="Plat.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRowPlatform"
            android:layout_alignBaseline="@+id/tvRowRoute"
            android:layout_alignBottom="@+id/tvRowRoute"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="22:31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRowArrive"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivRowArrow" />

        <TextView
            android:text="22:31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRowDepart"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingRight="@dimen/spacingMedium"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivRowArrow"
            android:paddingLeft="@dimen/spacingLarge"
            android:paddingRight="@dimen/spacingSmall"
            android:src="@drawable/ic_keyboard_backspace_black_48px"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvRowDepart"
            android:layout_alignBottom="@+id/tvRowArrive"
            android:rotation="180"
            android:scaleType="centerCrop"
            android:cropToPadding="false"
            android:adjustViewBounds="false" />

        <TextView
            android:text="1 change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRowChanges"
            android:layout_alignBaseline="@+id/tvRowArrive"
            android:layout_alignBottom="@+id/tvRowArrive"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_height="1sp"
        android:layout_width="fill_parent"
        android:layout_weight="0.00"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/spacingMedium" />

</LinearLayout>