<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacingSmall"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        android:layout_marginLeft="@dimen/spacingLarge"
        android:layout_marginRight="@dimen/spacingLarge"
        android:layout_marginTop="@dimen/spacingSmall"
        android:layout_marginBottom="@dimen/spacingSmall">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacingMedium">

            <TextView
                android:text="BCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRecentFrom"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:paddingRight="@dimen/spacingMedium" />

            <TextView
                android:text="FNN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRecentTo"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivRecentArrow" />

            <TextView
                android:text="Bracknell to Farnborough North"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRecentRoute"
                android:textColor="@android:color/white"
                android:layout_below="@+id/tvRecentFrom"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/spacingSmall"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivRecentArrow"
                android:paddingLeft="@dimen/spacingLarge"
                android:paddingRight="@dimen/spacingSmall"
                android:src="@drawable/ic_keyboard_backspace_48px"
                android:rotation="180"
                android:scaleType="centerCrop"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                android:layout_above="@+id/tvRecentRoute"
                android:layout_toEndOf="@+id/tvRecentFrom" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>